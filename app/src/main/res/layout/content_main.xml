<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/txt_view_title_mainAc"
        android:layout_width="330dp"
        android:layout_height="81dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="38dp"
        android:text="@string/txt_view_title_mainAC"
        android:textAlignment="center"
        android:textSize="30sp"
 />

    <TextView
        android:id="@+id/txt_view_message_mainAC"
        android:layout_width="354dp"
        android:layout_height="89dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="26dp"
        android:textAlignment="center"
        android:textSize="20sp"
 />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_user"
        android:layout_width="373dp"
        android:layout_height="351dp"
        android:layout_marginStart="10dp"
        tools:listitem="@layout/list_row_user" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">

    <Button
        android:id="@+id/btn_new_user"
        android:layout_width="152dp"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:text="@string/btn_new_user" />

    <Button
        android:id="@+id/btn_total_balance"
        android:layout_width="152dp"
        android:layout_height="84dp"
        android:layout_marginStart="8dp"
        android:text="@string/btn_total_balance" />
</LinearLayout>

</LinearLayout>