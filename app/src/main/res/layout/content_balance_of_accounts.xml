<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFBFB"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.doctorBudget.Activities.BalanceOfAccountsActivity">


    <LinearLayout
        android:id="@+id/lin_lay_balance_profiles"
        android:layout_width="match_parent"
        android:layout_height="572dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_view_firs_message_balance_profiles"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/txt_view_firs_message_balance_profiles"
            android:textAlignment="center"
            android:textColor="#521BB5"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_view_message_balance_profiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/txt_view_message_balance"
            android:textAlignment="center"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_view_last_month_bl_prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_view_this_month_bl_prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_view_message_expense_sum_bl_prof"
                android:layout_width="127dp"
                android:layout_height="68dp"
                android:layout_marginStart="48dp"
                android:background="#F6C8D8"
                android:text="@string/txt_view_message_expense_sum"
                android:textAlignment="center"
                android:textColor="#761387"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txt_view_message_income_sum_bl_prof"
                android:layout_width="127dp"
                android:layout_height="68dp"
                android:layout_marginStart="40dp"
                android:background="#D3F2F6"
                android:text="@string/txt_view_message_income_sum"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_view_expense_sum_bl_prof"
                android:layout_width="127dp"
                android:layout_height="60dp"
                android:layout_marginStart="48dp"
                android:background="#F6C8D8"
                android:textAlignment="center"
                android:textColor="#761387"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txt_view_income_sum_bl_prof"
                android:layout_width="127dp"
                android:layout_height="60dp"
                android:layout_marginStart="40dp"
                android:background="#D3F2F6"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="25sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_view_required_dates_bl_prof"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColor="#BF2525"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_view_message_change_period_bl_prof"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:text="@string/txt_view_message_change_period_bl"
            android:textAlignment="center"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_txt_balance_prof_date_selection_1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@android:drawable/editbox_background"
                android:inputType="date"
                android:padding="5dp" />

            <EditText
                android:id="@+id/edt_txt_balance_prof_date_selection_2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@android:drawable/editbox_background"
                android:inputType="date"
                android:padding="5dp" />

            <Button
                android:id="@+id/btn_change_date_for_balance_prof"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:text="@string/btn_change" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="#F4EDD9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_view_expense_result_bl_prof"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/txt_view_expense_result"
                android:textAlignment="center"
                android:textColor="#761387"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_view_income_result_bl_prof"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/txt_view_income_result"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_details_balance_bl_prof"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="5dp"
                android:text="@string/btn_details"
                app:backgroundTint="#CABA8B" />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>