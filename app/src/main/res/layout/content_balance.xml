<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFBFB"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.doctorBudget.Activities.BalanceActivity">


    <Button
            android:id="@+id/btn_finance_sourse_config"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:text="@string/btn_config_fin_source" />

   <LinearLayout
        android:id="@+id/up_lin_lay_balance"
        android:layout_width="match_parent"
        android:layout_height="465dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_view_message_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_view_message_balance"
            android:textAlignment="center"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_view_last_month_bal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_view_this_month_bal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_view_message_expense_sum"
                android:layout_width="127dp"
                android:layout_height="68dp"
                android:layout_marginStart="48dp"
                android:background="#F6C8D8"
                android:text="@string/txt_view_message_expense_sum"
                android:textAlignment="center"
                android:textColor="#761387"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txt_view_message_income_sum"
                android:layout_width="127dp"
                android:layout_height="68dp"
                android:layout_marginStart="40dp"
                android:background="#D3F2F6"
                android:text="@string/txt_view_message_income_sum"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_view_expense_sum"
                android:layout_width="127dp"
                android:layout_height="60dp"
                android:layout_marginStart="48dp"
                android:background="#F6C8D8"
                android:textAlignment="center"
                android:textColor="#761387"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txt_view_income_sum"
                android:layout_width="127dp"
                android:layout_height="60dp"
                android:layout_marginStart="40dp"
                android:background="#D3F2F6"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="25sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_view_required_dates_bl"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textColor="#BF2525"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_view_message_change_period_bl"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:text="@string/txt_view_message_change_period_bl"
            android:textAlignment="center"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_txt_balance_date_selection_1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:background="@android:drawable/editbox_background"
                android:inputType="date"
                android:padding="5dp" />

            <EditText
                android:id="@+id/edt_txt_balance_date_selection_2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@android:drawable/editbox_background"
                android:inputType="date"
                android:padding="5dp" />

            <Button
                android:id="@+id/btn_change_date_for_balance"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:text="@string/btn_change" />

        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="134dp"
           android:layout_marginTop="25dp"
           android:background="#F4EDD9"
           android:orientation="vertical">

           <TextView
               android:id="@+id/txt_view_expense_result"
               android:layout_width="384dp"
               android:layout_height="58dp"
               android:layout_marginStart="10dp"
               android:layout_marginTop="10dp"
               android:text="@string/txt_view_expense_result"
               android:textAlignment="center"
               android:textColor="#761387"
               android:textSize="18sp" />


           <Button
               android:id="@+id/btn_details_balance"
               android:layout_width="wrap_content"
               android:layout_height="45dp"
               android:layout_marginStart="140dp"
               android:layout_marginTop="5dp"
               android:text="@string/btn_details"
               app:backgroundTint="#CABA8B" />

       </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_new_expense"
            android:layout_width="129dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:text="@string/btn_goTo_expense" />

        <Button
            android:id="@+id/btn_new_income"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:text="@string/btn_goTo_incomes" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/down_lin_lay_balance"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginTop="5dp"
        android:background="#F2E7F4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#F2E7F4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_switch_barChart"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="@string/btn_top_psf"
                android:textColor="#575050"
                android:textSize="12dp"
                app:backgroundTint="#C8B2CC" />

            <ImageView
                android:id="@+id/btn_close_details"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="55dp"
                android:src="@drawable/ic_close" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_view_top_title"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/txt_view_expense_top"
            android:textAlignment="center"
            android:textColor="#761387"
            android:textSize="18sp" />

        <com.github.mikephil.charting.charts.BarChart
            android:layout_marginTop="10dp"
            android:id="@+id/barChartExp"
            android:layout_width="match_parent"
            android:layout_height="437dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:layout_marginTop="10dp"
            android:id="@+id/barChartPFS"
            android:layout_width="match_parent"
            android:layout_height="437dp" />

    </LinearLayout>

</LinearLayout>